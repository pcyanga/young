{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "declaration": false,
    "outDir": "./dist",
    "strict": false,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}