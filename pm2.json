{
  "apps": [
    {
      "name": "young",
      "watch": false,
      "interpreter_args": "-P ../ -r tsconfig-paths/register",
      "script": "./dist/app.js",
      "exec_mode": "cluster",
      "instances": 1,
      "max_memory_restart": "1G",
      "autorestart": true,
      "autoput": "/dev/null",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "error": "./logs/err.log",
      "output": "./logs/out.log",
      "source_map_support": false,
      "node_args": [],
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}